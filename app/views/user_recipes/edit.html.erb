<body id="editBody">
  <div class="editModal">

      <h2 id="editH1">Edit Recipe Assignment</h2>

      <%= form_for @user_recipe, :url => { :action => "update" } do |f| %>

          <div class="field">
            <!-- <%= f.label 'Recipe:' %> -->
            <%= f.collection_select(:recipe_id, @recipes, :id, :label, :prompt => 'Select Recipe', class: "collectionSelectField", autofocus: true ) %>
          </div>

          <br>

          <div class="field">
            <!-- <%= f.label 'Meal:' %> -->
            <%= f.select(:category, ["Breakfast", "Brunch", "Lunch", "Snack", "Dinner", "Dessert"], { :prompt => "Select Meal Category"}, class: "collectionSelectField") %>
          </div>

          <br>

          <%= f.submit "Assign", class: "btn", id: "editBtn" %>

      <% end %>

  </div>

</body>
